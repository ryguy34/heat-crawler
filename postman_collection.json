				{
					"name": "Supreme Drop",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has success message\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.message).to.eql(\"Supreme notifications finished\");",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/drops/supreme/{{date}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"drops",
								"supreme",
								"{{date}}"
							]
						},
						"description": "Triggers Supreme drop notifications for a specific date. Creates a Discord channel and posts product information if the channel doesn't already exist."
					},
					"response": [
						{
							"name": "Success",
							"originalRequest": {
								"method": "GET",
